<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/introFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="eu.mcomputing.mobv.mobvzadanie.LoginFragment"
        android:label="LoginFragment"></fragment>

    <fragment
        android:id="@+id/introFragment"
        android:name="eu.mcomputing.mobv.mobvzadanie.IntroFragment"
        android:label="IntroFragment">

        <action
            android:id="@+id/action_intro_login"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_intro_signup"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="eu.mcomputing.mobv.mobvzadanie.SignupFragment"
        android:label="SignupFragment" />
</navigation>